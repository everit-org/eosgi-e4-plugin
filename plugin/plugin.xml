    <extension
      point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
        id="org.everit.e4.eosgi.plugin.propertyTester.esogiNode"
        type="org.everit.e4.eosgi.plugin.ui.navigator.nodes.EosgiNode"

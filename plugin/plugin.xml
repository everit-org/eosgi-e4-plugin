<?eclipse version="3.4"?>
<plugin>
    <!-- extend project explorer -->
    <extension
          point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
          viewerId="org.eclipse.ui.navigator.ProjectExplorer">
          <includes>
            <contentExtension pattern="org.everit.osgi.dev.e4.plugin.ui.navigator.dist" />
          </includes>
      </viewerContentBinding>
    </extension>
    
    <!-- define content provider for eosgi IProject -->
    <extension
          id="org.everit.osgi.dev.e4.plugin.ui.navigator"
          point="org.eclipse.ui.navigator.navigatorContent">
        <navigatorContent
          id="org.everit.osgi.dev.e4.plugin.ui.navigator.dist"
          name="%navigatorContent.everitOsgiContext"
          activeByDefault="true"
          icon="icons/everit.gif"
          priority="normal"
          contentProvider="org.everit.osgi.dev.e4.plugin.ui.navigator.DistContentProvider"
          labelProvider="org.everit.osgi.dev.e4.plugin.ui.navigator.DistLabelProvider">
          <triggerPoints>
             <or>
               <instanceof
                   value="org.eclipse.core.resources.IProject">
               </instanceof>
               <instanceof
                  value="org.everit.osgi.dev.e4.plugin.ui.navigator.model.AbstractNode">
                </instanceof>
             </or>
            </triggerPoints>
            <possibleChildren>
              <or>
                <instanceof
                  value="org.everit.osgi.dev.e4.plugin.ui.navigator.model.AbstractNode">
                </instanceof>
              </or>
            </possibleChildren>
        </navigatorContent>
    </extension>
    
    <extension
      point="org.eclipse.ui.ide.projectNatureImages"
      name="Bundle project nature image">
      <image
        id="org.everit.osgi.dev.e4.plugin.ui.projectNatureImages.eosgiNatureImage"
        natureId="org.everit.osgi.dev.e4.plugin.ui.natures.eosgi"
        icon="icons/everit_8_8.gif">
      </image>
    </extension>

    <!--m2e staffs -->   
    <extension
        point="org.eclipse.m2e.core.projectConfigurators">
        <configurator
            class="org.everit.osgi.dev.e4.plugin.core.m2e.DistProjectConfigurator"
            id="org.everit.osgi.dev.e4.plugin.core.m2e.DistProjectConfigurator"
            name="Project configurator for EOSGI dist projects.">
        </configurator>
    </extension>
    
    <extension
        point="org.eclipse.m2e.core.lifecycleMappingMetadataSource">
    </extension>
    
    <!-- menu staffs -->
    <extension
      point="org.eclipse.ui.menus"
      id="org.everit.osgi.dev.e4.plugin.ui.menus"
      name="eosgiMenus">
      <menuContribution
        locationURI="popup:org.eclipse.ui.popup.any"
        allPopups="false">
        <command
          commandId="org.everit.osgi.dev.e4.plugin.ui.command.create"
          label="%command.createDistribution">
          <visibleWhen>
            <with variable="selection">
              <iterate ifEmpty="false">
                <instanceof value="org.everit.osgi.dev.e4.plugin.ui.navigator.nodes.EnvironmentNode" />
              </iterate>
            </with>
          </visibleWhen>
        </command>
      </menuContribution>
    </extension>

    <extension
      id="org.everit.osgi.dev.e4.plugin.ui.command"
      point="org.eclipse.ui.commands">
      <command
        id="org.everit.osgi.dev.e4.plugin.ui.command.create"
        name="distComand">
      </command>
    </extension>
    
    <extension
      id="org.everit.osgi.dev.e4.plugin.ui.natures.eosgi"
      point="org.eclipse.core.resources.natures"
      name="%name.eosgiDistNature">
      <runtime>
        <run class="org.everit.osgi.dev.e4.plugin.ui.nature.EosgiNature" />
      </runtime>
    </extension>
    
    <extension
      point="org.eclipse.ui.handlers">
      <handler
        commandId="org.everit.osgi.dev.e4.plugin.ui.command.create"
        class="org.everit.osgi.dev.e4.plugin.ui.command.CreateDistHandler">
        <enabledWhen>
          <with variable="selection">
              <iterate ifEmpty="false">
                <instanceof value="org.everit.osgi.dev.e4.plugin.ui.navigator.nodes.EnvironmentNode" />
                <!--
                <or>
                  <test property="org.everit.osgi.dev.e4.plugin.properties.distStatus" value="NONE"/>
                  <test property="org.everit.osgi.dev.e4.plugin.properties.distStatus" value="STOPPED"/>
                  <test property="org.everit.osgi.dev.e4.plugin.properties.distStatus" value="RUNNING"/>
                </or>
                -->
              </iterate>
          </with>
        </enabledWhen>
      </handler>
    </extension>

  <!--
  <extension
    point="org.eclipse.core.expressions.propertyTesters">
    <propertyTester
      id="org.everit.osgi.dev.e4.plugin.propertyTester.environmentNode"
      type="org.everit.osgi.dev.e4.plugin.ui.navigator.nodes.EnvironmentNode"
      namespace="org.everit.osgi.dev.e4.plugin.properties"
      properties="distStatus"
      class="org.everit.osgi.dev.e4.plugin.ui.command.EnvironmentNodePropertyTester">
    </propertyTester>
  </extension>
  -->
    
  <!-- Server runtime staffs -->
  <extension point="org.eclipse.wst.server.core.runtimeTypes">
    <runtimeType
      id="org.everit.osgi.dev.e4.plugin.runtime"
      name="%name.eosgiRuntime"
      description="%desciption.eosgiRuntime"
      facetRuntimeComponent=""
      facetRuntimeVersion=""
      class="org.everit.osgi.dev.e4.plugin.core.server.EOSGiRuntime">
      <moduleType
        types="wst.web"
        versions="1.0"/>
    </runtimeType>
  </extension>
  
  <!-- Everit icon for eosgi server -->
  <extension point="org.eclipse.wst.common.project.facet.ui.images">
    <image
      runtime-component-type="org.everit.osgi.dev.e4.plugin.runtime"
      path="icons/everit.gif"/>
    <!-- icons/obj16/preview.gif -->
  </extension>
    
  <!-- Server type -->
  <extension point="org.eclipse.wst.server.core.serverTypes">
   <serverType
     id="org.everit.osgi.dev.e4.plugin.server"
     name="%name.eosgiServerType"
     description="%description.eosgiServerType"
     supportsRemoteHosts="false"
     runtime="true"
     initialState="stopped"
     hasConfiguration="false"
     launchModes="run,debug"
     launchConfigId="org.everit.osgi.dev.e4.plugin.server.launchConfigurationType"
     runtimeTypeId="org.everit.osgi.dev.e4.plugin.runtime"
     class="org.everit.osgi.dev.e4.plugin.core.server.EOSGiServer"
     behaviourClass="org.everit.osgi.dev.e4.plugin.core.server.EOSGiServerBehaviour"/>
  </extension>
  <!--launchConfigId="org.eclipse.jdt.launching.localJavaApplication"-->
  
  <!-- Own launch config type for EOSGi dists -->
  <extension point="org.eclipse.debug.core.launchConfigurationTypes">
   <launchConfigurationType
      id="org.everit.osgi.dev.e4.plugin.server.launchConfigurationType"
      name="%name.eosgiLaunchConfiguration"
      delegate="org.everit.osgi.dev.e4.plugin.core.server.EOSGILaunchConfigurationDelegate"
      modes="run,debug"/>
  </extension>
  
  <!-- Icon for EOSGi launcher type -->
  <extension point="org.eclipse.debug.ui.launchConfigurationTypeImages">
    <launchConfigurationTypeImage
      id="org.everit.osgi.dev.e4.plugin.server.launchConfigurationTypeImage"
      configTypeID="org.everit.osgi.dev.e4.plugin.server.launchConfigurationType"
      icon="icons/everit.gif">
    </launchConfigurationTypeImage>
  </extension>

  <!-- TabGroups for EOSGi laucher configuration -->
  <extension point="org.eclipse.debug.ui.launchConfigurationTabGroups">
    <launchConfigurationTabGroup
      id="org.everit.osgi.dev.e4.plugin.server.launchConfigurationTabGroup"
      type="org.everit.osgi.dev.e4.plugin.server.launchConfigurationType"
      class="org.everit.osgi.dev.e4.plugin.ui.launcher.LaunchConfigurationTabGroup">
    </launchConfigurationTabGroup>
  </extension>
</plugin>
